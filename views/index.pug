doctype html
html(lang='en')
  head
    title Pelefánt
    link(rel='stylesheet' type='text/css' href='css/style.css')
  body
    h1(class='header') Ez itt a Pelefánt! &lt;3
    div(class='container')
      div#sender(class='card')
        div
          h2 Üzenj valamit :3

          p Küldi:
          form(action='/send' method='post')
            input(type='radio', id='elefant', name='sender', value='Elefánt', required)
            label(for='elefant') Elefánt
            input(type='radio', id='pele', name='sender', value='Pele', required)
            label(for='pele') Pele
            br
            input(type='text', name='text', required)
            br
            button(type='submit') Küldés

      div#messages
        div#message-title-card(class='card')
          h2#message-title Üzenetek
          p#message-count #{messages.length} db
        each message in messages
          div(class='message card')
            div(class='message-header')
              div(class='message-sender') #{message.sender}
              div(class='message-timestamp') #{message.timestamp.getTime()}
            div(class='message-text') #{message.text}

    script(src='js/time-converter.js')
